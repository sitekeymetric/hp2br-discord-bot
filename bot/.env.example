# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database API Configuration
API_BASE_URL=http://localhost:8000

# Optional Configuration
DEBUG=false
DEFAULT_TEAMS=3
MIN_PLAYERS=1
MAX_PLAYERS=15

# Voice Channel Configuration
WAITING_ROOM_NAME=Waiting Room
TEAM_CHANNEL_PREFIX=Team

# Command Sync Configuration (Rate Limiting)
# Set to false to disable command syncing on startup (helpful during development)
SYNC_COMMANDS=true
# Number of retry attempts for rate-limited command syncing
SYNC_RETRY_ATTEMPTS=3
# Base delay in seconds for exponential backoff (if no Retry-After header)
SYNC_BASE_DELAY=1.0